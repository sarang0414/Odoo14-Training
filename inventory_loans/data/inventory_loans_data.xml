<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Sequences -->
        <record id="seq_loan_in" model="ir.sequence">
            <field name="name">Loan In</field>
            <field name="code">stock.picking.loan.in</field>
            <field name="prefix">LI/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_loan_out" model="ir.sequence">
            <field name="name">Loan Out</field>
            <field name="code">stock.picking.loan.out</field>
            <field name="prefix">LO/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Operation Types -->
        <!-- Note: We are not assigning a warehouse_id, making these global or requiring manual assignment. 
             If a default warehouse exists and you want to link it, python code is preferred. -->
        <record id="picking_type_loan_in" model="stock.picking.type">
            <field name="name">Loan In</field>
            <field name="code">incoming</field>
            <field name="sequence_code">LI</field>
            <field name="sequence_id" ref="seq_loan_in"/>
            <field name="default_loan_type">loan_in</field>
            <field name="show_operations">True</field>
        </record>

        <record id="picking_type_loan_out" model="stock.picking.type">
            <field name="name">Loan Out</field>
            <field name="code">outgoing</field>
            <field name="sequence_code">LO</field>
            <field name="sequence_id" ref="seq_loan_out"/>
            <field name="default_loan_type">loan_out</field>
            <field name="show_operations">True</field>
        </record>
    </data>
</odoo>
