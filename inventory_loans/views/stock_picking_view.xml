<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Picking Type -->
    <record id="view_picking_type_form_loan" model="ir.ui.view">
        <field name="name">stock.picking.type.form.loan</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="default_loan_type"/>
            </xpath>
        </field>
    </record>

    <!-- Stock Picking -->
    <record id="view_picking_form_loan" model="ir.ui.view">
        <field name="name">stock.picking.form.loan</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="loan_type"/>
            </xpath>
        </field>
    </record>

    <!-- Stock Move -->
    <record id="view_stock_move_tree_loan" model="ir.ui.view">
        <field name="name">stock.move.tree.loan</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="loan_type" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Stock Quant -->
    <record id="view_stock_quant_tree_loan" model="ir.ui.view">
        <field name="name">stock.quant.tree.loan</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="loan_type"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_stock_quant_form_loan" model="ir.ui.view">
        <field name="name">stock.quant.form.loan</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="loan_type"/>
            </xpath>
        </field>
    </record>

    <!-- Stock Valuation Layer -->
    <record id="view_stock_valuation_layer_tree_loan" model="ir.ui.view">
        <field name="name">stock.valuation.layer.tree.loan</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_date']" position="after">
                <field name="loan_type" optional="show"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_stock_valuation_layer_form_loan" model="ir.ui.view">
        <field name="name">stock.valuation.layer.form.loan</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_date']" position="after">
                <field name="loan_type"/>
            </xpath>
        </field>
    </record>

</odoo>
